<header>
  <%= link_to logo, root_path %>
  <nav>
    <ul>
      <li class="btn"><%= link_to "Home", root_path %></li>
      <% if signed_in? %>
      <li class="btn"><%= link_to "Users", users_path %></li>
        <li class="btn"><%= link_to "Profile", current_user %></li>
        <li class="btn"><%= link_to "Settings", edit_user_path(current_user) %></li>
      <% end %>
      <li class="btn"><%= link_to "Help", help_path %></li>
      <% if signed_in? %>
        <li class="btn"><%= link_to "Sign out", signout_path, method: :delete %></li>
      <% else %>
        <li class="btn"><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>