<% provide(:title, 'Home') %>
<% if signed_in? %>
  <table class="front">
    <tr>
      <td class="main">
        <h1 class="micropost">What's on your mind?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>

<h1>Twitter for Freedom</h1>
<p>
  This is the home page for the
  Twitter for Freedom page.
</p>
<%= link_to "Sign up now!", signup_path, class: "signup_button round" %>
<% end %> 